<h1>Posts</h1>

<table class="table table-striped table-hover">
				<thead>
					<tr>
						<th>
							Hours
						</th>
						<th>
							Date
						</th>
						<th class='hidden-xs'>
							Work Performed
						</th>
						<th>
							Status
						</th>
					</tr>
				</thead>
				<tbody>
          <% @posts.each do |post| %>
					  <%= render partial: 'post', locals: { post: post } %>
          <% end %>
				</tbody>
			</table>

			<%= paginate @posts %>
